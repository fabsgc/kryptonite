<?xml version="1.0" encoding="utf-8"?>
<root>
	<group name="kryptonite">
		<group name="index" action="index">
			<route name="default" url="(/*)" action="default" logged="false"/>
		</group>

		<group name="user" action="user">
			<route name="default" url="(/*)" action="default" logged="true"/>
			<route name="account" url="/user(/*)" action="account" logged="true" method="get"/>
			<route name="accountSave" url="/user(/*)" action="accountSave" logged="true" method="put"/>
			<route name="login" url="/user/sign-in(/*)" action="login" method="get"/>
			<route name="loginSave" url="/user/sign-in(/*)" action="loginSave" method="post"/>
			<route name="register" url="/user/sign-up(/*)" action="register" method="get"/>
			<route name="registerSave" url="/user/sign-up(/*)" action="registerSave" method="post"/>
			<route name="activate" url="/user/activate/(.+)(/*)" action="activate" vars="id" method="get"/>
			<route name="logout" url="/user/logout/(/*)" action="logout" logged="true" method="get"/>
		</group>
	</group>
</root>