<?xml version="1.0" encoding="utf-8"?>
<root>
	<group name="kryptonite">
		<group name="index" action="index">
			<route name="default" url="(/*)" action="default" logged="false"/>
		</group>

		<group name="user" action="user">
			<route name="default" url="(/*)" action="default" logged="true"/>
			<route name="home-finished" url="/home/finished(/*)" action="homeFinished" logged="true"/>
			<route name="home-successes" url="/home/successes(/*)" action="homeSuccesses" logged="true"/>
			<route name="home-students" url="/home/students(/*)" action="homeStudents" logged="true"/>
			<route name="account" url="/user/account(/*)" action="account" logged="true" method="get"/>
			<route name="accountSave" url="/user/account(/*)" action="accountSave" logged="true" method="put"/>
			<route name="suscribe" url="/user/suscribe(/*)" action="suscribe" logged="true" method="get"/>
			<route name="suscribeSave" url="/user/suscribe(/*)" action="suscribeSave" logged="true" method="put"/>
			<route name="suscribeStudent" url="/user/suscribe/([0-9]+)(/*)" action="suscribe" logged="true" vars="id" method="get"/>
			<route name="suscribeStudentSave" url="/user/suscribe/([0-9]+)(/*)" action="suscribeSave" logged="true" vars="id" method="put"/>
			<route name="login" url="/user/sign-in(/*)" action="login" method="get" logged="false"/>
			<route name="loginSave" url="/user/sign-in(/*)" action="loginSave" method="post" logged="false"/>
			<route name="register" url="/user/sign-up(/*)" action="register" method="get" logged="false"/>
			<route name="registerSave" url="/user/sign-up(/*)" action="registerSave" method="post" logged="false"/>
			<route name="activate" url="/user/activate/(.+)(/*)" action="activate" vars="id" method="get" logged="false"/>
			<route name="logout" url="/user/logout/(/*)" action="logout" logged="true" method="get"/>
		</group>

		<group name="student" action="student" url="/student">
			<route name="create" url="/create(/*)" action="create" logged="true" method="get"/>
			<route name="createSave" url="/create(/*)" action="create" logged="true" method="post"/>
			<route name="update" url="/update/([0-9]+)(/*)" action="create" logged="true" method="get"/>
			<route name="updateSave" url="/update/([0-9]+)(/*)" action="create" logged="true" method="post"/>
			<route name="delete" url="/delete/([0-9]+)(/*)" action="create" logged="true" method="get"/>
		</group>

		<group name="category" action="category" url="/category">
			<route name="browse" url="/browse(/*)" action="browse" logged="true" method="get"/>
			<route name="category" url="/([0-9]+)/(.+)(/*)" action="category" vars="id,slug" logged="true" method="get"/>
		</group>

		<group name="enigma" action="enigma" url="/enigma">
			<route name="enigma" url="/([0-9]+)/(.+)(/*)" action="enigma" vars="id,slug" logged="true" method="get"/>
			<route name="enigmaCheck" url="/([0-9]+)/(.+)(/*)" action="enigmaCheck" vars="id,slug" logged="true" method="post"/>
		</group>
	</group>
</root>